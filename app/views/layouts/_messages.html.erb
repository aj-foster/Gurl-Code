<% if flash.any? %>
      <div>
  <% flash.each do |type, message| %>
        <noscript>
          <div class="msg msg--noscript msg--<%= type %>">
            <%= message %>
          </div>
        </noscript>

        <div class="msg msg--<%= type %>">
          <%= message %>
        </div>
  <% end %>
      </div>
<% end %>